<div class="container">
  <div class="content-wrapper">
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <!-- CONTENT HERE -->
          <!-- END OF CONTENT -->

           <h2>Selamat Datang</h2>
           <h5>Edit Data Artikel</h5>
                <%= form_for @article do |f| %>
                <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, class: 'form-control' %>
                 
                  
                </div>
                <div class="form-group">
                  <%= f.label :content %>
                  <%= f.text_area :content, cols: 20, rows: 10, class: 'form-control' %>
                  
                  
                </div>
                <div class="form-group">
                  <%= f.label :status %>
                  <%= f.radio_button :status, "active" %>
                  <%= label :artikel_status, 'active' %>
                  <%= f.radio_button :status, "non-active", :checked => true %>
                  <%= label :artikel_status, 'off' %>
                </div>
                <div class="form-group">
                    <%= f.submit :submit %>
                </div>
                <% end %>

                <%= link_to 'back', articles_path, class: 'btn btn-md btn-info'%>
               
        </div>
      </div>
    </section>
  </div>
