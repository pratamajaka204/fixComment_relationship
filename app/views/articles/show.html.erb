			<hr />
			<h3 class="subtitle is-3">Leave a reply</h3>
			<div id="form-comment">
		 		<%= render 'comments/form' %>
			</div>
		</div>
	</div>
</section>

					 

					 <p><%= link_to 'back', articles_path, class: 'btn btn-md btn-info'%></p>
						
				     
				</div>
			</div>
		</section>
